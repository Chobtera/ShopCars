@model IEnumerable<ShopCars.Web.Models.CarViewModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Cars List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CarCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Create New Car
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>
                        @car.CarName
                    </td>
                    <td>
                        @car.BrandId
                    </td>
                    <td>
                        @((car.Price).ToString("c"))
                    </td>
                    <td>
                        <a asp-action="CarUpdate" class="btn btn-success" asp-route-id="@car.CarId">
                            <i class="fas fa-edit">Update</i>
                        </a>
                        <a asp-action="CarDelete" class="btn btn-danger" asp-route-id="@car.CarId">
                            <i class="fas fa-trash">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>